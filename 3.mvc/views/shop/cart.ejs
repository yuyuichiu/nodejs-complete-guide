<%- include('../includes/head.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class='container'>
            <table class='table table-hover'>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class='text-end'>Action</th>
                        <th class='text-end'>Qty.</th>
                        <th class='text-end'>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < cart.products.length; i++) { %>
                        <tr>
                            <td><%= cart.products[i].title %> </td>
                            <td class='d-flex justify-content-end'>
                                <form action='/cart' method='delete'>
                                    <button class='btn btn-sm btn-dark'>Remove</button>
                                    <input type='hidden' name='productId' value='<%= cart.products[i].id %>' />
                                </form>
                            </td>
                            <td class='text-end'><%= cart.products[i].quantity %> </td>
                            <td class='text-end'>$<%= cart.products[i].price %></td>
                        </tr>
                    <% } %> 
                    <tr>
                        <td></td>
                        <td></td>
                        <td class='text-end'>TOTAL</td>
                        <td class='text-end'><b>$<%= cart.totalPrice %></b></td>
                    </tr>
                </tbody>
            </table>

            <div class='w-100 d-flex justify-content-center'>
                <button class='btn btn-primary'>Checkout (WIP)</button>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>